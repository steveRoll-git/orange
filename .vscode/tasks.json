{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build project",
            "command": "g++",
            "args": ["-g", "${workspaceFolder}\\src\\*.cpp", "-o", "${workspaceFolder}\\bin\\Orange.exe"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}